<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckBal">

    <EditText
        android:id="@+id/totalTrans_amount"
        android:layout_width="181dp"
        android:layout_height="60dp"
        android:layout_marginBottom="65dp"
        android:background="@android:color/holo_red_dark"
        android:ems="10"
        android:inputType="number"
        android:text=" K0.00"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/trans_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/transAmount" />

    <ImageView
        android:id="@+id/logo2"
        android:layout_width="233dp"
        android:layout_height="167dp"
        android:layout_marginTop="135dp"
        android:layout_marginBottom="61dp"
        app:layout_constraintBottom_toTopOf="@+id/transAmount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vodafone" />

    <TextView
        android:id="@+id/transAmount"
        android:layout_width="226dp"
        android:layout_height="47dp"
        android:layout_marginBottom="52dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:text="Total Credit Balance"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/totalTrans_amount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo2" />

    <Button
        android:id="@+id/trans_btn"
        android:layout_width="234dp"
        android:layout_height="66dp"
        android:layout_marginBottom="143dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:text="Check credit balance"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/totalTrans_amount" />

</androidx.constraintlayout.widget.ConstraintLayout>